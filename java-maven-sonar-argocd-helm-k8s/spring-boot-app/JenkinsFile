pipeline {
    agent {
        docker {
            image 'santosh8554/maven-docker-agent:latest'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_URL      = "http://98.84.122.160:9000"
        DOCKER_REGISTRY = "https://index.docker.io/v1/"
        DOCKER_CRED    = "docker-cred"

        GIT_REPO_NAME  = "Jenkins-Zero-To-Hero"
        GIT_USER_NAME  = "santosh8554"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/santosh8554/Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Build and Test') {
            steps {
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn clean package
                '''
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn org.sonarsource.scanner.maven:sonar-maven-plugin:sonar \
                          -Dsonar.login=$SONAR_AUTH_TOKEN \
                          -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build and Push Docker Image') {
            environment {
                DOCKER_IMAGE = "santosh8554/ultimate-cicd:${BUILD_NUMBER}"
            }
            steps {
                script {
                    sh '''
                        export DOCKER_API_VERSION=1.44
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
